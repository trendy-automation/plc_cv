                //            bash 'curl --connect-timeout 20 -XPOST --unix-socket /var/run/docker.sock http://localhost/containers/opencv/stop'
                //        }
                //    }
                //}
            }
        }
        stage ("clean & copy appdata") {
            steps {
                echo " ============== clean appdata =================="
                bash 'find $target_path/ -type f ! -name debug.log -and -type d ! -name __pycache__ -exec rm -R {} \\;'
                echo " ============== copy app =================="
                bash 'cp -ir $source_path $target_path'
            }
        }
        stage ("start opencv") {
